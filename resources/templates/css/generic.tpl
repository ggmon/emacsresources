/* CSS Document */
body {
margin-right:40px;
margin-left:40px;
margin-top:0px;
background-color:#f0f0f0;
}

input,textarea, select,checkbox {
border:1px solid #cccccc;
font-size:16px;
}
em {
font-size:12px;
color:#ff0000;
}

h2 {
font-size:25px;
}

h3{
font-size:22px;
color:#3e3e3e;
border-bottom:1px solid #ccc;
}


a:link {
font-family:Georgian;
text-decoration:none;

}

a:visited {
font-family:Georgian;
text-decoration:none;
}

a:hover {
font-family:Georgian;
text-decoration:none;
}

a:active {
font-family:Georgian;
text-decoration:none;
}
